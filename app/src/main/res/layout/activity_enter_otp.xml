<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="24dp">
        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận OTP"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/tvNhapOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng nhập mã OTP được gửi đến điện thoại"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:gravity="center" />

        <!-- OTP Input Field -->
        <EditText
            android:id="@+id/etOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã OTP"
            android:inputType="number"
            android:gravity="center"
            android:padding="12dp"
            android:background="@drawable/otp_edittext_background"
            android:maxLength="6"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- Verify Button -->
        <Button
            android:id="@+id/btnVerify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="12dp"
            android:elevation="4dp" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/errorMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF4444"
            android:visibility="gone"
            android:text="Mã OTP không hợp lệ"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal" />

        <!-- Resend OTP Text -->
        <TextView
            android:id="@+id/tvResendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không nhận được mã OTP? Gửi lại."
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:paddingTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>



</RelativeLayout>
